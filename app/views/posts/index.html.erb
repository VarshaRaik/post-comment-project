<p id="notice"><%= notice %></p>
<h1 style="color:red;">Posts</h1>
<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
<hr>
<% @posts.each do |post| %>

  
  <div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
      <p class="card-text"><%= truncate(post.body, length: 60) %></p>
      <button type="button" class="btn btn-danger btn-sm"><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></button> 
  </div>  
  </div>
<% end %>
</div>
</div>
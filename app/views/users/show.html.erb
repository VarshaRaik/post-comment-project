<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                 <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    </div>
                    <div class= "row ml-5">
                    <%= image_tag(@user.image,:size => '150x150',:class => "rounded-circle ml-5") %>
                    </div>

                            <div class="row mt-4" >
                            <div class="col-md-6", style="color: #FF7A59">
                                    <label>Email Id</label>
                                </div>
                                <div class="col-md-6", style="color: #FF7A59">
                                    <p><%= @user.email%></p>
                                </div>
                                </div>
                               <div class="row">
                               <div class="col-md-6", style="color: #FF7A59">
                                    <label>Name</label>
                                </div>
                                <div class="col-md-6", style="color: #FF7A59">
                                    <p><%= "#{@user.first_name}  #{@user.last_name}"%></p>
                                </div>
                                </div>
                                <div class="row">
                                <div class="col-md-6", style="color: #FF7A59">
                                    <label>Phone</label>
                                </div>
                                <div class="col-md-6", style="color: #FF7A59">
                                    <p><%= @user.mobile_number%></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6", style="color: #FF7A59">
                                    <label>Address</label>
                                </div>
                                <div class="col-md-6", style="color: #FF7A59">
                                    <p><%= @user.address%></p>
                                </div>
                            </div>
                    </div>       
                            <div class="col-md-2 ml-5", style="color: #FF7A59">
                            <%= link_to 'Edit',  edit_user_registration_path, class: "btn btn-primary ml-5" %>
                            </div>
                            <div class="col-md-2 ml-5">
                            <%= link_to 'Add a posts', posts_path, class: "btn btn-primary ml-5" %>
                            </div>
                                 
                </div>
            </div> 
        </div>
    </form>           
</div>







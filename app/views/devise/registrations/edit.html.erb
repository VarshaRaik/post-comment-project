

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-row">
  <div class="form-group col-md-6", style="color: #FF7A59">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group col-md-6", style="color: #FF7A59">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="form-group col-md-6", style="color: #FF7A59">
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
</div>
<div class="form-group col-md-6", style="color: #FF7A59">
<%= f.label :last_name %><br />
<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
</div>
<div class="form-group col-md-6", style="color: #FF7A59">
<%= f.label :mobile_number %><br />
<%= f.text_field :mobile_number, autofocus: true, autocomplete: "mobile_number" %>
</div>
<div class="form-group col-md-6", style="color: #FF7A59">
<%= f.label :address %><br />
<%= f.text_field :address, autofocus: true, autocomplete: "address" %>
</div>
<div class="form-group col-md-3", style="color: #FF7A59">
  <%= f.label :image %>
  <%= f.file_field :image %>
  </div>
</div>


  <div class="actions btn", style="color: #FF7A59">
    <%= f.submit "Update" %>
  </div>
<% end %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>



<%= link_to "Back", :back %>
